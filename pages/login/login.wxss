.login_title{
  text-align: center;
  padding: 20px 0 10px;
}
.itemView{
    position: relative;
    border:  1px solid #fff;
    box-shadow: 0px 2px 4px 4px #ddd;
    border-radius: 40px;
    margin-left: 15px;
    margin-right: 15px;
    margin-top: 35px;
}
.login_info{
  width: 75%;
  margin: 0 auto;
}
.itemView text{
  position: absolute;
  left: 10px;
  top: 8px;
  font-size: 20px;
  color: #828282;
}
.itemView .input{
  padding-left: 35px;
  height: 40px;
  font-size: 12px;
}
.loginbtn{
  margin-left: 15px; 
  margin-right: 15px; 
  margin-top: 35px;              
  border-radius: 40px;
  background-color: #0085e2;
  color: #fff;
  height: 40px;
  line-height: 40px;
}
.regest{
  text-align: center;
  margin-top: 20px;
  font-weight: 300;
  font-size: 16px;
  text-decoration: underline;
}